{
    "manifest_version": 2,
    "name": "cookie-editor",
    "version": "1.2",
    "description": "Basic cookie editor",
    "background": {
        "scripts": [
            "cookie-editor.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "38": "button/cookie-38.png"
        },
        "default_title": "EditMyCookie",
        "default_popup": "interface/popup/cookie-list.html",
        "browser_style": true
    },
    "devtools_page": "interface/devtools/devtool.html",
    "permissions": [
        "cookies", "<all_urls>", "tabs"
    ],
	"icons": {
		"38": "button/cookie-38.png"
	}
}