{
    "manifest_version": 2,
    "name": "Cookie-Editor",
    "version": "1.3",
    "description": "Basic cookie editor",
    "background": {
        "scripts": [
            "cookie-editor.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/cookie-16-filled.png",
            "19": "icons/cookie-19-filled.png",
            "32": "icons/cookie-32-filled.png",
            "48": "icons/cookie-48-filled.png"
        },
		"theme_icons": [{
			"light": "icons/cookie-16-light.png",
			"dark": "icons/cookie-16.png",
			"size": 16
		}, {
			"light": "icons/cookie-32-light.png",
			"dark": "icons/cookie-32.png",
			"size": 32
		}, {
			"light": "icons/cookie-128-light.png",
			"dark": "icons/cookie-128.png",
			"size": 128
		}],
        "default_title": "EditMyCookie",
        "default_popup": "interface/popup/cookie-list.html",
        "browser_style": true
    },
    "devtools_page": "interface/devtools/devtool.html",
    "permissions": [
        "cookies", "<all_urls>", "tabs"
    ],
	"icons": {
		"16": "icons/cookie-16-filled.png",
		"19": "icons/cookie-19-filled.png",
        "32": "icons/cookie-32-filled.png",
		"48": "icons/cookie-48-filled.png",
		"128": "icons/cookie-128-filled.png"
	}
}